alias gs='git status'
alias gl='git pull'
alias gp='git push'
alias gc='git commit'
alias gcm='git commit -m'
alias ga='git add'
alias gd='git diff'
alias gsu='git submodule update --init --recursive'

# Use eza instead of ls
alias ls='eza'
alias ll='eza -alF'
alias la='eza -a'
alias l='eza -l'
alias lh='eza -alhF'

# Add work specific aliases
if [ -f ~/work/.bash_aliases ]; then
    . ~/work/.bash_aliases
fi
